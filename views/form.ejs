 <div class="container ">
 	<div class="card-panel  hoverable">
      <div class="row">
      <div class="loginform">
      <form class="col s12 l12 m12" id="/signup" action="" method="post">
        <div class="row">
        	<div class="input-field col s12 l4 m4">


        		<input type="text" placeholder="First name" id="firstname" name="firstname" class="validate" required>
        		<label for="name">First Name</label>
        		</div>
        	<div class="input-field col s12 l4 m4">
        		<input type="text" placeholder="Middle name" id="middlename" name="middlename" class="validate" required>
        		<label for="name">Middle Name</label>
        		</div>
        	<div class="input-field col s12 m4 l4">
        	<input type="text" placeholder="Last name" id="lastname" name="lastname" class="validate" required>
        		<label for="name">last Name</label>
        		</div>
        		</div> <!--end row -->
            <div class="row">
               <div class="input-field col s12 l6 m6">
                  
                  <input placeholder="Username"  id="username"  name="username" type="text" class="active validate" required>
                  <label for="username">Username</label>
               </div>
               <div class="input-field col s12 l6 m6">      
                  <label for="password">Password</label>
                  <input id="password" type="password" placeholder="Password" class="validate" required>          
               </div>
            </div>
            <div class="row">
               <div class="input-field col s12 l6 m6">
                  <input placeholder="Email" id="email" type="email" class="validate">
                  <label for="email">Email</label>
               </div>
            
          
               <div class="input-field col s12 l6 m6">
			     
                  
                  <label for="address">Phone Number(optional) </label>
                  <input type="text" placeholder="Phone number" id="mobileno" name="mobileno" class="validate" required>
               </div>
            </div>			
            <div class="row">
               <div class="input-field col s12 l6 m6">
                  <input placeholder="Address"  type="text">
                  <label for="adress"> Address </label>
               </div>
            <div class="input-field col s12 l6 m6">
                   <span style="font-size: 20px;"><b>Profile Picture ðŸ˜Ž</b></span> <br>
                  <input placeholder="Profile Picture"  type="file">
                  
            </div>
            </div>
            <div class="row">
             <label for="adress">Select Gender</label>
            
               <div class="input-field col l2 s12 m4">
              
                   <div class="col s12 l12 m6">
                     <input id="male" type="radio" name="gender" value="male" checked>
                     <label for="male">Male</label>
                     </div>
                 
                 <div class="col s12 l12 m6">
                     <input id="female" type="radio" name="gender" value="female" checked>
                     <label for="female">Female</label>
                 </div>
                  
               </div>
            </div>   
           <div class="input-field col s12 l12 m12">
           	  <input type="date" id="dateofbirth" name="dateofbirth" class="datepicker">
